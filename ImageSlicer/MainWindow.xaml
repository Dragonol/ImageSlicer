<Window x:Class="ImageSlicer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageSlicer"
        mc:Ignorable="d"
        Title="Image Slicer" Height="550" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <Border BorderThickness="0.5" BorderBrush="Black" Margin="35,100,35,160" Background="White"></Border>
        <Image x:Name="Image" Panel.ZIndex="1" Margin="50,115,50,175" AllowDrop="True" Drop="ImageDrop" Source="Default.png"/>
        <Label Content="IMAGE SLICER" HorizontalAlignment="Center" Margin="0,30,0,0" VerticalAlignment="Top" FontSize="36" FontFamily="/ImageSlicer;component/Fonts/#Staatliches"/>
        <Button x:Name="SliceButton" IsEnabled="False" Content="SLICE" HorizontalAlignment="Center" Margin="0,401,0,0" VerticalAlignment="Top" Width="185" Height="71" FontSize="24" FontFamily="/ImageSlicer;component/Fonts/#Staatliches" Background="#FFDDDDDD" Click="SliceButton_Click"/>
        <Label x:Name="Text" Content="Drag Image" HorizontalAlignment="Center" Margin="0,207.6,0,0" VerticalAlignment="Top" FontSize="16" FontFamily="/ImageSlicer;component/Fonts/#Quicksand Medium"/>
    </Grid>

</Window>
